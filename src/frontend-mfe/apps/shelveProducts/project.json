{
  "name": "shelveProducts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/shelveProducts/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/shelveProducts",
        "index": "apps/shelveProducts/src/index.html",
        "main": "apps/shelveProducts/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/shelveProducts/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/shelveProducts/src/assets",
          {
            "glob": "**/*",
            "input": "apps/shelveProducts/public"
          }
        ],
        "styles": [
            "apps/shelveProducts/src/styles.scss",
            "@angular/material/prebuilt-themes/azure-blue.css",
            "node_modules/bootstrap/dist/css/bootstrap.min.css",
            "node_modules/ngx-toastr/toastr.css"
        ],
        "scripts": [
          "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
        ],
        "customWebpackConfig": {
          "path": "apps/shelveProducts/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/shelveProducts/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4201,
        "publicHost": "http://localhost:4201",
        "proxyConfig": "apps/shelveProducts/proxy-local.config.js"
      },
      "configurations": {
        "production": {
          "buildTarget": "shelveProducts:build:production",
          "proxyConfig": "apps/shelveProducts/proxy-local.config.js"
        },
        "development": {
          "buildTarget": "shelveProducts:build:development"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["portal:serve"]
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "shelveProducts:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/shelveProducts/jest.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "shelveProducts:build",
        "port": 4201,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "shelveProducts:build:development"
        },
        "production": {
          "buildTarget": "shelveProducts:build:production"
        }
      }
    }
  }
}
