{
  "name": "portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "ng-mf",
  "sourceRoot": "packages/portal/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/portal",
        "index": "packages/portal/src/index.html",
        "main": "packages/portal/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "packages/portal/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "packages/portal/src/assets",
          {
            "glob": "**/*",
            "input": "packages/portal/public"
          }
        ],
        "styles": [
          "node_modules/bootstrap/dist/css/bootstrap.css",
          "packages/portal/src/styles.scss"
        ],
        "scripts": [
          "node_modules/bootstrap/dist/js/bootstrap.bundle.js"
        ],
        "customWebpackConfig": {
          "path": "packages/portal/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "packages/portal/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200",
        "proxyConfig": "packages/portal/proxy-local.config.js"
      },
      "configurations": {
        "production": {
          "buildTarget": "portal:build:production"
        },
        "development": {
          "buildTarget": "portal:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "portal:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/portal/jest.config.ts",
        "tsConfig": "packages/portal/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "portal:build",
        "port": 4200,
        "spa": true
      }
    }
  }
}
